<ehcache:config
    xmlns:ehcache="http://www.ehcache.org/v3"
    xmlns:tc="http://www.ehcache.org/v3/clustered">

  <ehcache:service>
    <tc:cluster>
      <tc:connection url="terracotta://example.com:9540/cachemanager"/>
      <tc:server-side-config auto-create="true"></tc:server-side-config>
    </tc:cluster>
  </ehcache:service>

  <ehcache:cache alias="simple-cache">
    <ehcache:key-type>java.lang.Long</ehcache:key-type>
    <ehcache:value-type>java.lang.String</ehcache:value-type>
    <ehcache:resources>
      <tc:cluster-fixed from="primary-server-resource" unit="MB">16</tc:cluster-fixed>
    </ehcache:resources>
  </ehcache:cache>

  <ehcache:cache alias="tiered-cache">
    <ehcache:key-type>java.lang.Long</ehcache:key-type>
    <ehcache:value-type>java.lang.String</ehcache:value-type>
    <ehcache:resources>
      <ehcache:heap>10</ehcache:heap>
      <tc:cluster-fixed from="primary-server-resource" unit="MB">4</tc:cluster-fixed>
    </ehcache:resources>
  </ehcache:cache>

</ehcache:config>